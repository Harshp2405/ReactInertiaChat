{
    "$schema": "https://www.schemastore.org/package.json",
    "private": true,
    "type": "module",
    "scripts": {
        "build": "vite build",
        "dev": "vite",
        "lint": "eslint resources/js --ext .js,.jsx --ignore-path .gitignore --fix",
        "serve": "php artisan serve",
        "reverb": "php artisan reverb:start",
        "queue": "php artisan queue:work",
        "all": "concurrently -n \"VITE,SERVER,REVERB,QUEUE\" -c \"blue,green,yellow,magenta\" \"npm run dev\" \"php artisan serve\" \"php artisan reverb:start\" \"php artisan queue:work\""
    },
    "devDependencies": {
